@model List<Volunteer_website.Models.Registration>
@{
    Layout = null;
    var userid = Context.Session.GetString("UserID") ?? "Người dùng";
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Danh sách sự kiện</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Dosis:wght@200..800&display=swap" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" />
    <link href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    
    <link rel="stylesheet" href="@Url.Content("~/css/Registered_Event.css")" />
    <link rel="stylesheet" href="~/css/Profile_Manage.css" />
</head>
<style>
    
</style>
<body>
    <nav class="navbar navbar-expand-lg">
        <div class="container-fluid">
            <div class="logo-container">
                <img src="~/images/VolunteerIcon.png" alt="Logo" class="navbar-logo" />
                <a class="navbar-brand" href="~/index.html">DUTERS</a>
            </div>
            <div class="navbar-right">
                <div class="menu-toggle">
                    <i class="fa-solid fa-bars"></i>
                </div>
                <div class="navbar-dropdown">
                    <img id="avatar" src="~/images/person_6.jpg" alt="Avatar" />
                    <div id="dropdown-menu" class="navbar-dropdown-menu">
                        <a asp-controller="Account" asp-action="Settings">
                            <i class="fa-solid fa-cog"></i>Cài đặt
                        </a>
                        <hr />
                        <a asp-controller="Home" asp-action="Index">
                            <i class="fa-solid fa-sign-out-alt"></i>Đăng xuất
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </nav>

    <!-- Sidebar -->
    <div class="wrapper d-flex">
        <div class="sidebar" id="sidebar">
            <a asp-controller="Account" asp-action="Manage">
                <i class="fa-solid fa-house"></i>Trang chủ
            </a>
            <div class="sidebar-dropdown">
                <a href="#"><i class="fa-solid fa-address-card"></i>Hồ sơ</a>
                <div class="sidebar-dropdown-menu">
                    <a asp-controller="Account" asp-action="Update_Infor">
                        <i class="fa-solid fa-user"></i>Thông Tin Cá Nhân
                    </a>
                    <a asp-controller="Account" asp-action="Contact_Infor">
                        <i class="fa-solid fa-address-book"></i>Thông Tin Liên Hệ
                    </a>
                </div>
            </div>
            <a asp-controller="Account" asp-action="Change_PassWord">
                <i class="fa-solid fa-lock"></i>Bảo mật
            </a>
            <a asp-controller="Manage" asp-action="My_Registered_Courses" class="active">
                <i class="fa-solid fa-calendar-check"></i>Sự kiện đã đăng ký
            </a>
        </div>

        <div class="container mt-5">
            <h4 class="mb-4">Danh sách sự kiện</h4>
            @if (Model != null && Model.Any())
            {
                <div class="table-responsive">

                    <table class="table table-hover">
                        <thead class="thead-light">
                            <tr>
                                <th style="width: 20%;">Tên sự kiện</th>
                                <th style="width: 20%;">Ngày bắt đầu</th>
                                <th style="width: 15%;">Trạng thái</th>
                                <th style="width: 10%;">Hoạt động</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var registration in Model)
                            {
                                <tr>
                                    <td>@registration.Event.Name</td>
                                    <td>@(registration.Event.DayBegin.HasValue ? registration.Event.DayBegin.Value.ToString("dd/MM/yyyy") : "Không có ngày bắt đầu")</td>
                                    <td>
                                        <span class="badge @(registration.Status == "Approved" ? "bg-success" :
                                              registration.Status == "Pending" ? "bg-warning" : "bg-secondary")">
                                            @registration.Status
                                        </span>
                                    </td>
                                    <td>
                                        <div class="d-flex gap-2">
                                            <a href="@Url.Action("Detail_Event", "Home", new { id = registration.EventId })"
                                               class="btn btn-sm btn-details">
                                                
                                                <i class="fas fa-info-circle"></i> Chi tiết
                                            </a>
                                            <button class="btn btn-sm btn-cancel"
                                                    onclick="confirmCancel('@registration.EventId')">
                                                <i class="fas fa-times"></i> Hủy
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

            }
            else
            {
                <div class="alert alert-info">
                    <i class="fas fa-info-circle me-2"></i>Bạn chưa đăng ký sự kiện nào.
                </div>
            }
        </div>

    </div>
	

	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        function confirmCancel(eventId) {
            Swal.fire({
                title: 'Xác nhận hủy đăng ký',
                text: "Bạn có chắc muốn hủy đăng ký khóa học này?",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#fd7e14',
                cancelButtonColor: '#6c757d',
                confirmButtonText: 'Đồng ý',
                cancelButtonText: 'Hủy bỏ'
            }).then((result) => {
                if (result.isConfirmed) {
                   fetch(`/Manage/CancelRegistration?eventId=${eventId}`, {
                        method: 'POST'
                    })
                    .then(response => response.json())
                    .then(data => {
                        if (data.success) {
                            Swal.fire({
                                title: 'Thành công!',
                                text: data.message,
                                icon: 'success',
                                confirmButtonColor: '#fd7e14'
                            }).then(() => {
                                location.reload();
                            });
                        } else {
                            Swal.fire({
                                title: 'Lỗi!',
                                text: data.message,
                                icon: 'error',
                                confirmButtonColor: '#fd7e14'
                            });
                        }
                    })
                    .catch(error => {
                        Swal.fire({
                            title: 'Lỗi!',
                            text: 'Có lỗi xảy ra khi xử lý yêu cầu',
                            icon: 'error',
                            confirmButtonColor: '#fd7e14'
                        });
                    });
                }
            });
        }
    </script>
</body>
</html>