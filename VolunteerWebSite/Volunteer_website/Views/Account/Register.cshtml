@model Volunteer_website.ViewModel.RegisterVM

@{
    ViewData["Title"] = "Register";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <title>Register</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <link href="https://fonts.googleapis.com/css?family=Dosis:200,300,400,500,700" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css?family=Overpass:300,400,400i,600,700" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/signUp.css" />
</head>
<body>
    <div class="wrapper">
        <div class="SignUpContainer">
            <div class="SignUpHeader">
                <h1>Sign Up</h1>
            </div>

            <form asp-action="Register" asp-controller="Account" method="post">
                @Html.AntiForgeryToken()

                <div class="inputBox">
                    <input asp-for="@Model.Name" class="inputField" placeholder=" " required />
                    <label asp-for="@Model.Name" class="inputLabel">Name</label>
                    <span asp-validation-for="@Model.Name" class="text-danger"></span>
                </div>

                <div class="inputBox">
                    <input asp-for="@Model.Email" type="email" class="inputField" placeholder=" " required />
                    <label asp-for="@Model.Email" class="inputLabel">Email</label>
                    <span asp-validation-for="@Model.Email" class="text-danger"></span>
                </div>

                <div class="inputBox">
                    <input asp-for="@Model.PhoneNumber" class="inputField" placeholder=" " required />
                    <label asp-for="@Model.PhoneNumber" class="inputLabel">Phone</label>
                    <span asp-validation-for="@Model.PhoneNumber" class="text-danger"></span>
                </div>

                <div class="inputBox">
                    <input asp-for="@Model.Address" class="inputField" placeholder=" " required />
                    <label asp-for="@Model.Address" class="inputLabel">Address</label>
                    <span asp-validation-for="@Model.Address" class="text-danger"></span>
                </div>

                <div class="genderBox">
                    <label>Gender:</label>
                    <label>
                        <input asp-for="@Model.Gender" type="radio" value="true" required /> Male
                    </label>
                    <label>
                        <input asp-for="@Model.Gender" type="radio" value="false" required /> Female
                    </label>
                    <span asp-validation-for="@Model.Gender" class="text-danger"></span>
                </div>

                <div class="inputBox">
                    <input asp-for="@Model.DateOfBirth" type="date" class="inputField" required />
                    <label for="@Model.DateOfBirth" class="inputLabel">Date of Birth</label>
                    <span asp-validation-for="@Model.DateOfBirth" class="text-danger"></span>
                </div>

                <div class="inputBox">
                    <input asp-for="@Model.UserName" class="inputField" placeholder=" " required />
                    <label asp-for="@Model.UserName" class="inputLabel">Username</label>
                    <span asp-validation-for="@Model.UserName" class="text-danger"></span>
                </div>

                <div class="inputBox">
                    <input asp-for="@Model.Password" type="password" class="inputField" placeholder=" " required />
                    <label asp-for="@Model.Password" class="inputLabel">Password</label>
                    <span asp-validation-for="@Model.Password" class="text-danger"></span>
                </div>

                <div class="inputBox">
                    <input asp-for="@Model.ConfirmPassword" type="password" class="inputField" placeholder=" " required />
                    <label asp-for="@Model.ConfirmPassword" class="inputLabel">Confirm Password</label>
                    <span asp-validation-for="@Model.ConfirmPassword" class="text-danger"></span>
                </div>

                <div>
                    <button type="submit">Sign Up</button>
                    <a asp-action="Login" asp-controller="Account">Already have an account?</a>
                </div>
            </form>
        </div>
    </div>

    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
</body>
</html>
