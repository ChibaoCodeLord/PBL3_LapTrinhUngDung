@model Volunteer_website.ViewModels.SignUpModel
@{
    Layout = null;
    var userName = Model?.UserName ?? "";
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Quản lý tài khoản</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Dosis:wght@200..800&display=swap" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" />
    <link rel="stylesheet" href="~/css/Profile_Manage.css" />


</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg">
        <div class="container-fluid">
            <div class="logo-container">
                <img src="~/images/VolunteerIcon.png" alt="Logo" class="navbar-logo" />
                <a class="navbar-brand" href="@Url.Action("Index", "Home")">DUTERS</a>
            </div>
            <div class="navbar-dropdown">
                <img id="avatar" src="~/images/person_6.jpg" alt="Avatar" />
                <div id="dropdown-menu" class="navbar-dropdown-menu">
                    <a asp-controller="Account2" asp-action="Update_Infor">
                        <i class="fa-solid fa-user"></i>Thông tin cá nhân
                    </a>
                    <a asp-controller="Account2" asp-action="Settings">
                        <i class="fa-solid fa-cog"></i>Cài đặt
                    </a>
                    <hr />
                    <a asp-controller="Home" asp-action="Index">
                        <i class="fa-solid fa-sign-out-alt"></i>Đăng xuất
                    </a>
                </div>
            </div>
        </div>
    </nav>

    <!-- Sidebar -->
    <div class="sidebar">
        <a asp-controller ="Account2" asp-action="Manage"><i class="fa-solid fa-house"></i>Trang chủ</a>
        <div class="sidebar-dropdown">
            <a href="#"><i class="fa-solid fa-address-card"></i>Hồ sơ</a>
            <div class="sidebar-dropdown-menu">
                <a asp-controller="Account2" asp-action="Update_Infor">
                    <i class="fa-solid fa-user"></i>Thông Tin Cá Nhân
                </a>
                <a asp-controller="Account2" asp-action="Contact_Infor">
                    <i class="fa-solid fa-address-book"></i>Thông Tin Liên Hệ
                </a>
            </div>
        </div>
        <a asp-controller="Account2" asp-action="Change_PassWord"><i class="fa-solid fa-lock"></i>Bảo mật</a>
        <a asp-controller="Manage" asp-action="Registered_Event" class="active">
            <i class="fa-solid fa-calendar-check"></i>Sự kiện đã đăng ký
        </a>
    </div>

    <!-- Content -->
    <div class="container mt-5" style="margin-left: 120px; padding: 20px">
        <div class="text-center mb-4">
            <img src="~/images/person_5.jpg" width="100" class="rounded-circle" alt="Avatar" />
            <h3>Chào mừng, @userName</h3>
        </div>

        <div class="container mt-5">
            <div class="row d-flex justify-content-center mb-5">
                <div class="col-md-6 col-lg-3 mb-3">
                    <div class="stats-card">
                        <i class="fa-solid fa-dollar-sign"></i>
                        <h2>50,000,000đ</h2>
                        <p>Số tiền đã ủng hộ</p>
                    </div>
                </div>
                <div class="col-md-6 col-lg-3 mb-3">
                    <div class="stats-card">
                        <i class="fa-solid fa-handshake"></i>
                        <h2>15</h2>
                        <p>Dự án đã tham gia</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="~/js/Profile_Manage.js"></script>
</body>
</html>
